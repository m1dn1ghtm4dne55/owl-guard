[Unit]
Description=Login Monitoring Service
After=network.target dbus.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/owl-guard
EnvironmentFile=/opt/owl-guard/src/.env
ExecStart=/opt/owl-guard/venv/bin/python /opt/owl-guard/src/main.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ssh-owl

[Install]
WantedBy=multi-user.target